

class TestSet {
    name = ''
    total = 0
    pass = 0

    func init(name) {
        this.name = name
        this.total = 0
        this.pass = 0
    }

    func assert_equal(v1, v2) {
        this.total += 1
        if v1 == v2 {
            this.pass += 1
        } else {
            this.print_fail(v1, v2)
        }
    }

    func assert_not_euqual(v1, v2) {
        this.total += 1
        if v1 != v2 {
            this.pass += 1
        } else {
            this.print_fail(v1, v2)
        }
    }

    func assert_true(v) {
        this.assert_equal(v, true)
    }

    func assert_false(v) {
        this.assert_equal(v, false)
    }

    func print_fail(v1, v2) {
        print('[FAIL]' + this.name + ':' + this.total + ' expected:' + v2 + ' but got: ' + v1 )
    }

    func print_summary() {
        title = 'Test results for ' + this.name
        print(title)
        print('=' * title.len)
        print(this.pass + '/' + this.total)
    }
}

ts = TestSet('Operators')
ts.assert_equal(1+3, 4)
ts.assert_equal(1+3+8, 12)
ts.assert_equal(1-3, -2)
ts.assert_equal(1+3-4, 0)
ts.assert_equal(4*9.5, 38)
ts.assert_equal(1/4, 0)
ts.assert_equal(1/.4, 0.25)

ts.assert_true(2 == 2)
ts.print_summary()


